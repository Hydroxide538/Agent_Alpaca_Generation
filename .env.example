# CrewAI Workflow Manager Environment Configuration Example
# Copy this file to .env and update with your actual values

# OpenAI API Configuration (Optional - only needed if using OpenAI models)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Ollama Configuration (for local models)
OLLAMA_BASE_URL=http://localhost:11434

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Development Settings
DEBUG=false
RELOAD=false

# GPU Optimization (if available)
ENABLE_GPU=true

# Default Models (can be overridden in the web interface)
DEFAULT_DATA_GENERATION_MODEL=ollama:llama3.3:latest
DEFAULT_EMBEDDING_MODEL=ollama:bge-m3:latest
DEFAULT_MANAGER_MODEL=ollama:llama3.3:latest
